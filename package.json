{
  "name": "library-of-things",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "npm run format && npm run lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.3",
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@pinia/nuxt": "^0.5.5",
    "@vueuse/core": "^11.3.0",
    "@vueuse/motion": "^3.0.3",
    "appwrite": "^18.2.0",
    "autoprefixer": "^10.4.20",
    "firebase": "^12.1.0",
    "pinia": "^2.2.6",
    "postcss": "^8.4.49",
    "primeicons": "^7.0.0",
    "primevue": "^3.53.1",
    "tailwindcss": "^3.4.15",
    "vue": "^3.4.38",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.8.1",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitejs/plugin-vue": "^5.1.3",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.29.1",
    "husky": "^9.1.6",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.1.4"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{vue,js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
